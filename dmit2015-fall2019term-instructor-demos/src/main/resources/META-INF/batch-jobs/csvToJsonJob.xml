   		</listeners>
        
        <chunk item-count="5">
            <reader ref="scheduledPhotoEnforcementZoneDetailBatchItemReader"/>
            <processor ref="scheduledPhotoEnforcementZoneDetailBatchItemProcessor"/>
            <writer ref="scheduledPhotoEnforcementZoneDetailBatchItemWriter"/>
        </chunk>
    </step>
</job>
